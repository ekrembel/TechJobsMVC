@{
}

    <h1>@ViewBag.title</h1>

@if (ViewBag.Jobs != null)
{

    @foreach (Job job in ViewBag.Jobs)
    {
        <table class="job-listing">
            <tr>
                <td>ID</td>
                <td>@job.Id</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@job.Name</td>
            </tr>
            <tr>
                <td>Employer</td>
                <td>
                    <a asp-controller="Search" asp-action="Results" asp-route-searchTerm="@job.Employer" asp-route-searchType="all">@job.Employer</a>
                </td>
            </tr>
            <tr>
                <td>Location</td>
                <td>
                    <a asp-controller="Search" asp-action="Results" asp-route-searchTerm="@job.Location" asp-route-searchType="all">@job.Location</a>
                </td>
            </tr>
            <tr>
                <td>Position Type</td>
                <td>
                    <a asp-controller="Search" asp-action="Results" asp-route-searchTerm="@job.PositionType" asp-route-searchType="all">@job.PositionType</a>
                </td>
            </tr>
            <tr>
                <td>Skill</td>
                <td>
                    <a asp-controller="Search" asp-action="Results" asp-route-searchTerm="@job.CoreCompetency" asp-route-searchType="all">@job.CoreCompetency</a>
                </td>
            </tr>
        </table>
    }
}
